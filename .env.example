# Sistema ONG Backend - Environment Variables

# Application Environment
NODE_ENV=development
ORGANIZATION_ID=ong-empuje-comunitario

# Security
JWT_SECRET=your_jwt_secret_change_in_production_minimum_32_characters

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=ong_sistema
DB_USER=ong_user
DB_PASSWORD=ong_password
MYSQL_ROOT_PASSWORD=root_password

# gRPC Services
USER_SERVICE_HOST=user-service
USER_SERVICE_PORT=50051
INVENTORY_SERVICE_HOST=inventory-service
INVENTORY_SERVICE_PORT=50052
EVENTS_SERVICE_HOST=events-service
EVENTS_SERVICE_PORT=50053

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
ZOOKEEPER_CLIENT_PORT=2181

# Email Configuration (for user service)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_ethereal_user
EMAIL_PASS=your_ethereal_password

# API Gateway
API_GATEWAY_PORT=3000

# Development/Testing
DEBUG=false
LOG_LEVEL=info