	"item": [
		{
			"name": "Login Exitoso - Presidente",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    pm.expect(jsonData).to.have.property('usuario');",
							"    ",
							"    // Store token for subsequent requests",
							"    pm.environment.set('auth_token', jsonData.token);",
							"    pm.environment.set('user_id', jsonData.usuario.id);",
							"    pm.environment.set('user_role', jsonData.usuario.rol);",
							"});",
							"",
							"pm.test(\"User has correct role\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.usuario.rol).to.eql('PRESIDENTE');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"identificador\": \"admin@ong.com\",\n    \"clave\": \"admin123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
